#!/bin/env bash

if wget -q --tries=10 --timeout=20 --spider https://github.com; then
    devour alacritty --config-file "$HOME/.config/i3/alacritty/alacritty.yml" -e sudo -E calamares -d
else
    notify-send -a "S.T.A.L.K.E.R. OS Installer" -t 10000 "Installer cannot continue without an internet connection."
fi
